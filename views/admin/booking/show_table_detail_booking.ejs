<!-- DataTales Example -->
<div class="card shadow mb-4 mt-1">
  <div class="card-header py-3">
    <a href="/admin/booking" class="btn btn-warning">Back</a>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-4">
        <img
          src="https://dashboardstaycation.herokuapp.com/<%= booking.payments.proofPayment %>"
          alt="Image"
          style="width: 100%; display: block;"
          ;
        />
        <div class="row ml-1 mt-2">
          <% if(booking.payments.status == "Proses") { %>
          <form
            action="/admin/booking/<%= booking.id %>/confirmation?_method=PUT"
            method="POST"
          >
            <button class="btn btn-success btn-sm" type="submit">
              <i class="fas fa-check"></i>
              Confirmation
            </button>
          </form>
          <form
            action="/admin/booking/<%= booking.id %>/reject?_method=PUT"
            method="POST"
            class="ml-2"
          >
            <button class="btn btn-danger btn-sm" type="submit">
              <i class="fas fa-times"></i>
              Reject
            </button>
          </form>
          <% } %>
        </div>
      </div>
      <div class="col-md-8">
        <div class="table-responsive">
          <table
            class="table table-bordered"
            id="DataTableActivity"
            width="100%"
            cellspacing="0"
          >
            <thead>
              <tr>
                <th>Name Member</th>
                <th>Total</th>
                <th>Bank From</th>
                <th>Title</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>
                  <%= booking.memberId.firstName %> <%=
                  booking.memberId.lastName %>
                </td>
                <td>$<%= booking.total %></td>
                <td><%= booking.payments.bankFrom %></td>
                <td><%= booking.itemId.title %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
